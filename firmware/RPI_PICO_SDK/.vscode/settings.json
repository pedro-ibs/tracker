{
	// These settings tweaks to the cmake plugin will ensure
	// that you debug using cortex-debug instead of trying to launch
	// a Pico binary on the host
	"cmake.statusbar.advanced": {
		"debug": {
			"visibility": "hidden"
		},
		"launch": {
			"visibility": "hidden"
		},
		"build": {
			"visibility": "hidden"
		},
		"buildTarget": {
			"visibility": "hidden"
		},
	},
	"cmake.configureEnvironment": {
		"PICO_SDK_PATH": "/home/pibs/.local/opt/pico/pico-sdk",
		"PICO_EXAMPLES_PATH": "/home/pibs/.local/opt/pico/pico-examples",
		"PICO_EXTRAS_PATH": "/home/pibs/.local/opt/pico/pico-extras",
		"PICO_PLAYGROUND_PATH": "/home/pibs/.local/opt/pico/pico-playground"
	},
	"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
	"cmake.generator": "NMake Makefiles",
	"cmake.cmakePath": "cmake",
	"cmake.buildBeforeRun": false,


	"cSpell.words": [
		"gpio"
	],
	"files.associations": {
		"atomic": "cpp",
		"cstdint": "cpp",
		"simple_uart.h": "c",
		"stdlib.h": "c",
		"stdio.h": "c",
		"config.h": "c"
	},
	"environment": [ {
		"PICO_SDK_PATH": "/home/pibs/.local/opt/pico/pico-sdk",
		"PICO_EXAMPLES_PATH": "/home/pibs/.local/opt/pico/pico-examples",
		"PICO_EXTRAS_PATH": "/home/pibs/.local/opt/pico/pico-extras",
		"PICO_PLAYGROUND_PATH": "/home/pibs/.local/opt/pico/pico-playground"			
	} ],
	"terminal.integrated.env.linux": {
		"PICO_SDK_PATH": "/home/pibs/.local/opt/pico/pico-sdk",
		"PICO_EXAMPLES_PATH": "/home/pibs/.local/opt/pico/pico-examples",
		"PICO_EXTRAS_PATH": "/home/pibs/.local/opt/pico/pico-extras",
		"PICO_PLAYGROUND_PATH": "/home/pibs/.local/opt/pico/pico-playground"	
	},


	// "problems.decorations.enabled": false,
	// "C_Cpp.errorSquiggles": "Disabled",

}
